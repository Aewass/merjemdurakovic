---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Portfolio from '../components/Portfolio.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Merjem Durakovic - Digital Designer">
  <main class="relative min-h-screen">
    {/* Background gradients */}
    <div class="fixed inset-0">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-rose-200/40 via-rose-100/30 to-transparent animate-gradient-1 color-shift-1"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-violet-200/40 via-violet-100/30 to-transparent animate-gradient-2 color-shift-2"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,_var(--tw-gradient-stops))] from-blue-200/40 via-blue-100/30 to-transparent animate-gradient-3 color-shift-3"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,_var(--tw-gradient-stops))] from-emerald-200/40 via-emerald-100/30 to-transparent animate-gradient-4 color-shift-4"></div>
    </div>
    
    {/* Content */}
    <div class="relative">
      <Navbar />
      <Hero />
      <Portfolio />
      <Footer />
    </div>
  </main>
</Layout>

<style>
  .gradient-background {
    background-size: 400% 400%;
    filter: blur(50px);
  }

  @keyframes gradient-shift-1 {
    0%, 100% { 
      opacity: 0.7; 
      transform: scale(1.2) translate(0%, 0%); 
    }
    50% { 
      opacity: 0.5; 
      transform: scale(1.3) translate(2%, 2%); 
    }
  }

  @keyframes gradient-shift-2 {
    0%, 100% { 
      opacity: 0.5; 
      transform: scale(1.2) translate(0%, 0%); 
    }
    50% { 
      opacity: 0.7; 
      transform: scale(1.3) translate(-2%, 2%); 
    }
  }

  @keyframes gradient-shift-3 {
    0%, 100% { 
      opacity: 0.6; 
      transform: scale(1.2) translate(0%, 0%); 
    }
    50% { 
      opacity: 0.4; 
      transform: scale(1.3) translate(2%, -2%); 
    }
  }

  @keyframes gradient-shift-4 {
    0%, 100% { 
      opacity: 0.4; 
      transform: scale(1.2) translate(0%, 0%); 
    }
    50% { 
      opacity: 0.6; 
      transform: scale(1.3) translate(-2%, -2%); 
    }
  }

  @keyframes color-shift-1 {
    0%, 100% { --tw-gradient-from: #fecdd3; --tw-gradient-to: #fce7f3; }
    50% { --tw-gradient-from: #ddd6fe; --tw-gradient-to: #ede9fe; }
  }

  @keyframes color-shift-2 {
    0%, 100% { --tw-gradient-from: #ddd6fe; --tw-gradient-to: #ede9fe; }
    50% { --tw-gradient-from: #bfdbfe; --tw-gradient-to: #dbeafe; }
  }

  @keyframes color-shift-3 {
    0%, 100% { --tw-gradient-from: #bfdbfe; --tw-gradient-to: #dbeafe; }
    50% { --tw-gradient-from: #a7f3d0; --tw-gradient-to: #d1fae5; }
  }

  @keyframes color-shift-4 {
    0%, 100% { --tw-gradient-from: #a7f3d0; --tw-gradient-to: #d1fae5; }
    50% { --tw-gradient-from: #fecdd3; --tw-gradient-to: #fce7f3; }
  }

  .animate-gradient-1 {
    animation: gradient-shift-1 25s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-2 {
    animation: gradient-shift-2 30s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-3 {
    animation: gradient-shift-3 35s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-4 {
    animation: gradient-shift-4 40s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .color-shift-1 {
    animation: color-shift-1 45s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .color-shift-2 {
    animation: color-shift-2 50s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .color-shift-3 {
    animation: color-shift-3 55s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .color-shift-4 {
    animation: color-shift-4 60s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  /* Apply multiple animations */
  .animate-gradient-1.color-shift-1 {
    animation: gradient-shift-1 25s cubic-bezier(0.4, 0, 0.2, 1) infinite,
               color-shift-1 45s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-2.color-shift-2 {
    animation: gradient-shift-2 30s cubic-bezier(0.4, 0, 0.2, 1) infinite,
               color-shift-2 50s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-3.color-shift-3 {
    animation: gradient-shift-3 35s cubic-bezier(0.4, 0, 0.2, 1) infinite,
               color-shift-3 55s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }

  .animate-gradient-4.color-shift-4 {
    animation: gradient-shift-4 40s cubic-bezier(0.4, 0, 0.2, 1) infinite,
               color-shift-4 60s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  }
</style>
