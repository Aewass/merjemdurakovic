---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Portfolio from '../components/Portfolio.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Merjem Durakovic - Digital Designer">
  <main class="relative min-h-screen">
    {/* Background gradients */}
    <div class="fixed inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-rose-200/40 via-violet-200/30 to-transparent"></div>
      <div class="absolute inset-0 bg-gradient-to-tr from-blue-200/30 via-emerald-200/20 to-transparent"></div>
    </div>
    
    {/* Content */}
    <div class="relative">
      <Hero />
      <Portfolio />
      <Footer />
    </div>
  </main>
</Layout>

