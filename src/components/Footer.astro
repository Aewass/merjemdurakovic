---
import { Linkedin, Mail, Copyright } from 'lucide-astro'
---

<footer id="contact" class="scroll-mt-20 relative overflow-hidden py-24 sm:py-32">
  <div class="max-w-6xl mx-auto px-6 sm:px-8">
    <div class="flex flex-col items-center text-center">
      {/* Name */}
      <h3 class="text-2xl font-bold mb-12 relative inline-block">
        Merjem Durakovic
        <div class="absolute -bottom-2 left-0 w-full h-2 bg-rose-200/40 -rotate-1"></div>
      </h3>
      
      {/* Social Links */}
      <div class="flex gap-6 mb-12">
        <a 
          href="https://linkedin.com" 
          class="
            group
            relative
            p-3
            text-gray-600
            hover:text-gray-900
            transition-colors
            duration-300
          "
        >
          <div class="absolute inset-0 bg-gray-50 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
          <Linkedin class="relative z-10 w-5 h-5" />
          <span class="sr-only">LinkedIn</span>
        </a>
        <a 
          href="mailto:your@email.com" 
          class="
            group
            relative
            p-3
            text-gray-600
            hover:text-gray-900
            transition-colors
            duration-300
          "
        >
          <div class="absolute inset-0 bg-gray-50 rounded-xl scale-0 group-hover:scale-100 transition-transform duration-300"></div>
          <Mail class="relative z-10 w-5 h-5" />
          <span class="sr-only">Email</span>
        </a>
      </div>

      {/* Contact */}
      <p class="text-gray-600 mb-12">
        Get in touch:{" "}
        <a 
          href="mailto:your@email.com" 
          class="
            relative 
            inline-block 
            text-gray-900 
            font-medium
            hover:text-gray-600
            transition-colors
            duration-300
          "
        >
          your@email.com
        </a>
      </p>

      {/* Copyright */}
      <div class="flex items-center gap-1.5 text-sm text-gray-500">
        <Copyright class="w-4 h-4" />
        <span>Merjem Durakovic. All rights reserved.</span>
      </div>
    </div>
  </div>

  {/* Decorative Elements */}
  <div class="absolute top-1/2 right-8 md:right-24 -translate-y-1/2 w-72 h-72 bg-gradient-to-br from-violet-200/30 to-rose-200/30 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-24 left-12 w-40 h-40 bg-gradient-to-br from-blue-200/30 to-emerald-200/30 rounded-full blur-2xl -z-10"></div>
</footer> 