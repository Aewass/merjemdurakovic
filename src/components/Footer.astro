---
import { Linkedin, Mail, Copyright, Copy, Check, Download, ExternalLink } from 'lucide-astro'
---

<footer id="contact" class="scroll-mt-20 relative overflow-hidden py-24 sm:py-32">
  <div class="max-w-6xl mx-auto px-6 sm:px-8">
    <div class="flex flex-col items-center text-center">
      {/* Main Heading */}
      <h2 class="text-4xl font-bold mb-16 relative inline-block">
        Let's Work Together
        <div class="absolute -bottom-2 left-0 w-full h-2 bg-rose-200/40 -rotate-1"></div>
      </h2>
      
      {/* Contact Links */}
      <div class="flex flex-col gap-4 mb-12 w-full max-w-md px-4">
        {/* Email Row */}
        <div class="relative flex group w-full">
          <a 
            href="mailto:merjemdurakovic@outlook.com"
            target="_blank"
            rel="noopener noreferrer"
            class="flex-1 flex items-center gap-3 sm:gap-4 p-4 sm:p-5 rounded-2xl bg-white hover:bg-gray-50 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 border border-gray-100 shadow-sm"
          >
            <div class="bg-rose-100/30 p-2.5 sm:p-3 rounded-xl">
              <Mail class="w-5 h-5 sm:w-6 sm:h-6 text-gray-800" />
            </div>
            <div class="flex-grow min-w-0 pr-8">
              <p class="font-semibold text-gray-900 text-base sm:text-lg mb-0.5">Send me an email</p>
            </div>
          </a>
          <button
            data-copy="merjemdurakovic@outlook.com"
            class="copy-button absolute right-3 sm:right-4 top-1/2 -translate-y-1/2 p-1.5 sm:p-2 text-gray-400 hover:text-gray-600 transition-colors duration-300"
            title="Copy email"
          >
            <Copy class="w-4 h-4 sm:w-5 sm:h-5 copy-icon" />
            <Check class="w-4 h-4 sm:w-5 sm:h-5 check-icon hidden" />
            <span class="tooltip absolute -top-8 sm:-top-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs sm:text-sm py-1 px-2 rounded opacity-0 transition-opacity duration-300">
              Copied!
            </span>
          </button>
        </div>

        {/* LinkedIn Row */}
        <div class="relative flex group w-full">
          <a 
            href="https://www.linkedin.com/in/merjem-durakovic-0a7152288/"
            target="_blank"
            rel="noopener noreferrer"
            class="flex-1 flex items-center gap-3 sm:gap-4 p-4 sm:p-5 rounded-2xl bg-white hover:bg-gray-50 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 border border-gray-100 shadow-sm"
          >
            <div class="bg-blue-100/30 p-2.5 sm:p-3 rounded-xl">
              <Linkedin class="w-5 h-5 sm:w-6 sm:h-6 text-gray-800" />
            </div>
            <div class="flex-grow min-w-0 pr-8">
              <p class="font-semibold text-gray-900 text-base sm:text-lg mb-0.5">Connect on LinkedIn</p>
            </div>
          </a>
          <button
            data-copy="https://www.linkedin.com/in/merjem-durakovic-0a7152288/"
            class="copy-button absolute right-3 sm:right-4 top-1/2 -translate-y-1/2 p-1.5 sm:p-2 text-gray-400 hover:text-gray-600 transition-colors duration-300"
            title="Copy LinkedIn URL"
          >
            <Copy class="w-4 h-4 sm:w-5 sm:h-5 copy-icon" />
            <Check class="w-4 h-4 sm:w-5 sm:h-5 check-icon hidden" />
            <span class="tooltip absolute -top-8 sm:-top-10 left-1/2 -translate-x-1/2 bg-gray-900 text-white text-xs sm:text-sm py-1 px-2 rounded opacity-0 transition-opacity duration-300">
              Copied!
            </span>
          </button>
        </div>

        {/* Download CV Row */}
        <div class="relative flex group w-full">
          <a
            href="/cv.pdf"
            download="Merjem_Durakovic_CV.pdf"
            class="flex-1 flex items-center gap-3 sm:gap-4 p-4 sm:p-5 rounded-2xl bg-white hover:bg-gray-50 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 border border-gray-100 shadow-sm"
          >
            <div class="bg-emerald-100/30 p-2.5 sm:p-3 rounded-xl">
              <Download class="w-5 h-5 sm:w-6 sm:h-6 text-gray-800" />
            </div>
            <div class="flex-grow min-w-0 pr-8">
              <p class="font-semibold text-gray-900 text-base sm:text-lg mb-0.5">Download my CV</p>
            </div>
          </a>
          <a
            href="/cv.pdf"
            target="_blank"
            rel="noopener noreferrer"
            class="absolute right-3 sm:right-4 top-1/2 -translate-y-1/2 p-1.5 sm:p-2 text-gray-400 hover:text-gray-600 transition-colors duration-300"
            title="Open CV in new tab"
          >
            <ExternalLink class="w-4 h-4 sm:w-5 sm:h-5" />
          </a>
        </div>
      </div>

      {/* Copyright */}
      <div class="flex items-center gap-1.5 text-sm text-gray-500">
        <Copyright class="w-4 h-4" />
        <span>All rights reserved.</span>
      </div>
    </div>
  </div>

  {/* Decorative Elements */}
  <div class="absolute top-1/2 right-8 md:right-24 -translate-y-1/2 w-72 h-72 bg-gradient-to-br from-violet-200/30 to-rose-200/30 rounded-full blur-3xl -z-10"></div>
  <div class="absolute bottom-24 left-12 w-40 h-40 bg-gradient-to-br from-blue-200/30 to-emerald-200/30 rounded-full blur-2xl -z-10"></div>
</footer>

<script>
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', async () => {
      const textToCopy = button.getAttribute('data-copy') || '';
      const copyIcon = button.querySelector('.copy-icon');
      const checkIcon = button.querySelector('.check-icon');
      const tooltip = button.querySelector('.tooltip');

      try {
        await navigator.clipboard.writeText(textToCopy);
        
        // Show success state
        copyIcon?.classList.add('hidden');
        checkIcon?.classList.remove('hidden');
        tooltip?.classList.add('opacity-100');

        // Reset after 2 seconds
        setTimeout(() => {
          copyIcon?.classList.remove('hidden');
          checkIcon?.classList.add('hidden');
          tooltip?.classList.remove('opacity-100');
        }, 2000);
      } catch (err) {
        console.error('Failed to copy text: ', err);
      }
    });
  });
</script> 